{{!< main.hbs }}

{{#contentFor "menu"}}
  {{#ifEquals route 'home'}}
    <a href="/" class="menu-item active">
      <i class="fa-solid fa-house me-2 fa-fw"></i>
      Início
    </a>
  {{else}}
    <a href="/" class="menu-item">
      <i class="fa-solid fa-house me-2 fa-fw"></i>
      Início
    </a>
  {{/ifEquals}}

  {{#ifEquals route 'list'}}
    <a href="/list" class="menu-item active">
      <i class="fa-solid fa-gamepad me-2 fa-fw"></i>
      Partidas
    </a>
  {{else}}
    <a href="/list" class="menu-item">
      <i class="fa-solid fa-gamepad me-2 fa-fw"></i>
      Partidas
    </a>
  {{/ifEquals}}

  {{#ifEquals route 'play'}}
    <a href="/play" class="menu-item active">
      <i class="fa-solid fa-play me-2 fa-fw"></i>
      Jogar
    </a>
  {{else}}
    <a href="/play" class="menu-item">
      <i class="fa-solid fa-play me-2 fa-fw"></i>
      Jogar
    </a>
  {{/ifEquals}}
{{/contentFor}}

{{#contentFor "sidebar-footer"}}
  <div id="punctuation_container"></div>
  <div class="stopwatch">
    <div class="d-flex flex-row justify-content-center align-items-center">
      <i class="fa-regular fa-hourglass-half fa-3x"></i>
      <span class="stopwatch-value ms-2">
        <span id="minutes">05</span>:<span id="seconds">00</span>
      </span>
    </div>
  </div>
{{/contentFor}}

{{#contentFor "body"}}
  <div class="mb-2">
    <h1 class="text-center text-purple-500 title-label">Quiztionário</h1>
  </div>

  <div class="row gx-0" data-room="{{ id }}" data-user="{{ user }}">
    <div class="col">
      <div id="quiz_answer" class="w-100 answer">
        <div class="w-100 d-flex justify-content-center answer-spinner">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row gx-0 mt-2">
    <div class="col">
      <div class="w-100">
        <div id="first_alternative" class="card-alternative">
          <div class="answer-label">
            <div class="w-100 d-flex justify-content-center answer-spinner">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row gx-0 mt-2">
    <div class="col">
      <div class="w-100">
        <div id="second_alternative" class="card-alternative">
          <div class="answer-label">
            <div class="w-100 d-flex justify-content-center answer-spinner">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row gx-0 mt-2">
    <div class="col">
      <div class="w-100">
        <div id="third_alternative" class="card-alternative">
          <div class="answer-label">
            <div class="w-100 d-flex justify-content-center answer-spinner">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row gx-0 mt-2">
    <div class="col">
      <div class="w-100">
        <div id="fourth_alternative" class="card-alternative">
          <div class="answer-label">
            <div class="w-100 d-flex justify-content-center answer-spinner">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col">
      <button id="quiz_answer_button" class="answer-button" disabled="disabled">Responder</button>
    </div>
  </div>
{{/contentFor}}

{{#contentFor "scripts"}}
  <script src="/js/quiz.js"></script>
  <script src="/js/quiz-socket.js"></script>
{{/contentFor}}
