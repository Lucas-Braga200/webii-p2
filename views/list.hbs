{{!< main.hbs }}

{{#contentFor "menu"}}
  {{#ifEquals route 'home'}}
    <a href="/" class="menu-item mb-2 active">
      <i class="fa-solid fa-house me-2 fa-fw"></i>
      Início
    </a>
  {{else}}
    <a href="/" class="menu-item mb-2">
      <i class="fa-solid fa-house me-2 fa-fw"></i>
      Início
    </a>
  {{/ifEquals}}

  {{#ifEquals route 'list'}}
    <a href="/list" class="menu-item active">
      <i class="fa-solid fa-gamepad me-2 fa-fw"></i>
      Partidas
    </a>
  {{else}}
    <a href="/list" class="menu-item">
      <i class="fa-solid fa-gamepad me-2 fa-fw"></i>
      Partidas
    </a>
  {{/ifEquals}}

  {{#ifEquals route 'play'}}
    <a href="/play" class="menu-item active">
      <i class="fa-solid fa-play me-2 fa-fw"></i>
      Jogar
    </a>
  {{else}}
    <a href="/play" class="menu-item">
      <i class="fa-solid fa-play me-2 fa-fw"></i>
      Jogar
    </a>
  {{/ifEquals}}
{{/contentFor}}

{{#contentFor "body"}}
  <div class="mb-2">
    <h1 class="text-center text-purple-500 title-label">Quiztionário</h1>
    <h2 class="text-center subtitle-label">Lista de jogos</h1>
  </div>

  <div class="row">
    <div class="col">
      <div class="w-100">
        <div class="game-list">
          <div class="row gx-0 game-item">
            <div class="col d-flex justify-content-center align-items-center">
              <div class="game-names w-100">
                <span class="name">
                  Pedro
                </span>
                <span class="versus">VS</span>
                <span class="name">
                  João
                </span>
              </div>
            </div>
            <div class="col d-flex justify-content-center align-items-center">
              <div class="game-started w-100">10/05/2023 às 10:00</div>
            </div>
            <div class="col d-flex justify-content-center align-items-center">
              <div class="game-status w-100">
                <div class="status-badge">
                  <i class="fa-solid fa-check"></i>
                  Concluído
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/contentFor}}